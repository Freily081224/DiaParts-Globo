<Window x:Class="DiaParts_Globo.Views.ExportarListado"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiaParts_Globo.Views"
        mc:Ignorable="d"
        Title="ExportarListado" Height="450" Width="800" Background="#FFA07835" Icon="/DiaParts globo.png" ResizeMode="CanMinimize">
    <Grid Margin="20">
        <Grid.Background>
            <ImageBrush ImageSource="/Views/DiaParts globo.png"/>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="Exportar Listado de Partes" FontSize="22" FontWeight="Bold" TextAlignment="Center" Foreground="#FFBB8E3B"/>

            <Button Content="Exportar a PDF" Click="BtnExportarPDF_Click" Width="364" Height="73" Background="#FFBD422E" Foreground="White" Margin="0,0,0,10" FontSize="20"/>
            <Button Content="Exportar a Word" Click="BtnExportarWord_Click" Width="366" Height="64" Background="#FF033556" Foreground="White" FontSize="20"/>
        </StackPanel>
    </Grid>
</Window>
