<Window x:Class="DiaParts_Globo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiaParts_Globo"
        mc:Ignorable="d"
        Title="DiaParts Globo - Login" Height="277" Width="437" Icon="/DiaParts globo.png" FontFamily="Bookman Old Style" FontSize="14">
    <Window.Background>
        <ImageBrush ImageSource="/FONDO-6.jpg" TileMode="Tile" Stretch="Fill"/>
    </Window.Background>
    <Grid Margin="30">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Usuario:" Foreground="White"/>
            <TextBox x:Name="txtUser" Margin="0,5"/>

            <TextBlock Text="Contraseña:" Margin="0,10,0,0" Foreground="White"/>
            <PasswordBox x:Name="txtPass" Margin="0,5"/>

            <Button Content="Iniciar sesión" Margin="0,15,0,0" Click="LoginButton_Click"/>
        </StackPanel>

    </Grid>
</Window>
